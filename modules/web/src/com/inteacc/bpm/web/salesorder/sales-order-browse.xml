<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.inteacc.bpm.web.salesorder.SalesOrderBrowse"
        focusComponent="salesOrdersTable"
        lookupComponent="salesOrdersTable"
        messagesPack="com.inteacc.bpm.web.salesorder">
    <dsContext>
        <groupDatasource id="salesOrdersDs"
                         class="com.inteacc.bpm.entity.SalesOrder"
                         view="salesOrder-view">
            <query>
                <![CDATA[select e from bp$SalesOrder e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="salesOrdersTable"
            spacing="true">
        <filter id="filter"
                applyTo="salesOrdersTable"
                datasource="salesOrdersDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="salesOrdersTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="docNo"/>
                <column id="docDate"/>
                <column id="customer"/>
                <column id="amount"/>
                <column id="processState"/>
            </columns>
            <rows datasource="salesOrdersDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="salesOrdersTable.create"/>
                <button id="editBtn"
                        action="salesOrdersTable.edit"/>
                <button id="removeBtn"
                        action="salesOrdersTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
